{
  "name": "@pencel/docs",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "serve-static": "astro preview",
    "build-deps": "nx run-many --target=build --projects=^docs",
    "watch-deps": "nx run-many --target=build --projects=^docs --watch"
  },
  "dependencies": {
    "@astrojs/starlight": "^0.36.1",
    "astro": "^5.6.1",
    "astro-mermaid": "^1.1.0",
    "mermaid": "^11.12.0",
    "sharp": "^0.34.2",
    "starlight-links-validator": "^0.19.0",
    "starlight-typedoc": "^0.21.4",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0"
  },
  "nx": {
    "name": "@pencel/docs",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/docs/src",
    "projectType": "application",
    "targets": {
      "build": {
        "executor": "nx:run-script",
        "dependsOn": [
          "^build"
        ],
        "options": {
          "script": "build"
        },
        "outputs": [
          "{projectRoot}/dist"
        ]
      },
      "dev": {
        "executor": "nx:run-script",
        "options": {
          "script": "dev"
        }
      },
      "start": {
        "executor": "nx:run-script",
        "options": {
          "script": "start"
        }
      },
      "serve-static": {
        "executor": "nx:run-script",
        "dependsOn": [
          "build"
        ],
        "options": {
          "script": "serve-static"
        }
      },
      "build-deps": {
        "executor": "nx:run-script",
        "options": {
          "script": "build-deps"
        }
      },
      "watch-deps": {
        "executor": "nx:run-script",
        "options": {
          "script": "watch-deps"
        }
      },
      "preview": {
        "executor": "nx:run-script",
        "options": {
          "script": "preview"
        }
      },
      "astro": {
        "executor": "nx:run-script",
        "options": {
          "script": "astro"
        }
      }
    },
    "tags": [
      "npm:public"
    ]
  },
  "devDependencies": {
    "starlight-theme-next": "^0.3.2"
  }
}
