{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!example/src/**/*", "!packages/runtime/examples/**/*", "!**/__tests__/fixtures/**/*"]
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "formatWithErrors": true,
    "lineWidth": 120
  },
  "linter": {
    "rules": {
      "recommended": true,
      "correctness": "error",
      "suspicious": {
        "noExplicitAny": "warn",
        "noDoubleEquals": "error",
        "noFallthroughSwitchClause": "error",
        "noRedeclare": "error"
      },
      "style": {
        "useConst": "error",
        "noParameterAssign": "error",
        "noUselessElse": "error"
      },
      "complexity": {
        "noUselessCatch": "error"
      },
      "security": {
        "noDangerouslySetInnerHtml": "error"
      },
      "nursery": {
        "noFloatingPromises": "error",
        "noImportCycles": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "recommended": true
    }
  }
}
