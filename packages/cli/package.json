{
  "name": "@pencil/cli",
  "version": "0.0.1",
  "dependencies": {
    "@pencil/core": "workspace:*"
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "bun build --compile src/main.ts --outfile out/cli --target node",
          "cwd": "packages/cli"
        }
      },
      "run": {
        "executor": "nx:run-commands",
        "options": {
          "command": "bun src/main.ts",
          "cwd": "packages/cli"
        }
      }
    }
  },
  "private": true,
  "devDependencies": {
    "@types/bun": "^1.2.21"
  }
}
