{
  "name": "@pencel/cli",
  "version": "0.0.1",
  "dependencies": {
    "@pencel/core": "workspace:*",
    "@pencel/utils": "workspace:*",
    "clipanion": "^4.0.0-rc.4",
    "c12": "^2.0.1"
  },
  "private": true,
  "devDependencies": {
    "@types/bun": "^1.2.21"
  },
  "nx": {
    "sourceRoot": "packages/cli",
    "projectType": "application",
    "targets": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "executor": "nx:run-commands",
        "options": {
          "command": "bun build --compile src/main.ts --outfile out/cli --target node",
          "cwd": "packages/cli"
        }
      },
      "run": {
        "dependsOn": [
          "^build"
        ],
        "executor": "nx:run-commands",
        "options": {
          "command": "bun src/main.ts",
          "cwd": "packages/cli"
        }
      }
    }
  }
}
