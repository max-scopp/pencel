{
  "name": "@pencel/cli",
  "version": "0.0.1",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "pencel": "dist/main.js"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "c12": "^2.0.1",
    "clipanion": "^4.0.0-rc.4"
  },
  "private": true,
  "devDependencies": {
    "@types/bun": "^1.2.21",
    "tsdown": "^0.15.2"
  },
  "peerDependencies": {
    "@pencel/core": "workspace:*",
    "@pencel/utils": "workspace:*"
  },
  "nx": {
    "sourceRoot": "packages/cli",
    "projectType": "application",
    "targets": {
      "build": {
        "dependsOn": ["^build"],
        "executor": "nx:run-commands",
        "outputs": ["{projectRoot}/dist"],
        "options": {
          "commands": ["tsdown", "tsc --noEmit"],
          "cwd": "packages/cli"
        }
      },
      "run": {
        "dependsOn": ["^build"],
        "executor": "nx:run-commands",
        "options": {
          "command": "bun src/main.ts",
          "cwd": "packages/cli"
        }
      },
      "lint": {
        "executor": "nx:run-commands",
        "options": {
          "command": "biome check .",
          "cwd": "packages/cli"
        }
      },
      "typecheck": {
        "dependsOn": [
          "^build"
        ]
      }
    }
  }
}
