{
  "name": "@pencel/cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/cli",
  "projectType": "application",
  "targets": {
    "build": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsdown", "tsc --noEmit"],
        "cwd": "packages/cli"
      }
    },
    "run": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "bun src/main.ts",
        "cwd": "packages/cli"
      }
    }
  }
}
