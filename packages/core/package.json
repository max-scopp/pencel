{
  "name": "@pencel/core",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "map": "./dist/index.js.map"
    }
  },
  "nx": {
    "sourceRoot": "packages/core",
    "projectType": "library",
    "targets": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "tsdown",
            "tsc --noEmit"
          ],
          "cwd": "packages/core"
        }
      }
    }
  },
  "peerDependencies": {
    "typescript": "*"
  },
  "dependencies": {
    "@babel/code-frame": "^7.27.1",
    "@pencel/runtime": "workspace:*",
    "@pencel/utils": "workspace:*",
    "c12": "^3.3.1",
    "chokidar": "^3.6.0",
    "csso": "^5.0.5",
    "fast-glob": "^3.3.3",
    "lightningcss": "^1.30.2",
    "picomatch": "^4.0.2",
    "sass": "^1.92.1",
    "sass-embedded": "^1.93.2",
    "ts-flattered": "^0.2.2",
    "postcss": "^8.5.6",
    "postcss-selector-parser": "^7.1.0"
  },
  "devDependencies": {
    "@types/babel__code-frame": "~7.0.6",
    "@types/csso": "~5.0.4",
    "happy-dom": "^20.0.8",
    "tsdown": "^0.15.2"
  }
}
