{
  "name": "@pencel/core",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "map": "./dist/index.js.map"
    }
  },
  "nx": {
    "sourceRoot": "packages/core",
    "projectType": "library",
    "targets": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "executor": "nx:run-commands",
        "options": {
          "command": "tsdown",
          "cwd": "packages/core"
        }
      }
    }
  },
  "peerDependencies": {
    "typescript": "*"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "@pencel/runtime": "workspace:*",
    "@pencel/utils": "workspace:*",
    "csso": "^5.0.5",
    "fast-glob": "^3.3.3",
    "sass": "^1.92.1",
    "ts-flattered": "link:ts-flattered"
  },
  "devDependencies": {
    "tsdown": "^0.15.2",
    "@types/csso": "~5.0.4"
  }
}
