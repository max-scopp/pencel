      "DOM",
      "ESNext"
    ],
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@pencel/runtime",
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "../utils/tsconfig.json"
    },
    {
      "path": "../runtime/tsconfig.json"
    }
  ]
}