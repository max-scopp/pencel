{
  "name": "@pencil/runtime",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "map": "./dist/index.js.map"
    }
  },
  "dependencies": {
    "@pencil/utils": "^0.0.0"
  },
  "devDependencies": {
    "typescript": "^5.2.2"
  },
  "nx": {
    "sourceRoot": "packages/runtime",
    "projectType": "library",
    "targets": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "executor": "nx:run-commands",
        "options": {
          "command": "tsdown",
          "cwd": "packages/runtime"
        }
      }
    }
  }
}
