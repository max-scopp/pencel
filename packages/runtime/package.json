{
  "name": "@pencel/runtime",
  "version": "0.0.1",
  "type": "module",
  "size-limit": [
    {
      "path": "dist/*.js",
      "limit": "3.5kB",
      "gzip": true
    }
  ],
  "scripts": {
    "size": "size-limit"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "map": "./dist/index.js.map"
    },
    "./jsx-runtime": {
      "types": "./dist/jsx-runtime.d.ts",
      "import": "./dist/jsx-runtime.js",
      "map": "./dist/jsx-runtime.js.map"
    },
    "./jsx-dev-runtime": {
      "types": "./dist/jsx-dev-runtime.d.ts",
      "import": "./dist/jsx-dev-runtime.js",
      "map": "./dist/jsx-dev-runtime.js.map"
    }
  },
  "dependencies": {
    "@pencel/utils": "^0.0.0"
  },
  "devDependencies": {
    "@size-limit/file": "^11.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "size-limit": "^11.2.0",
    "typescript": "*"
  },
  "nx": {
    "sourceRoot": "packages/runtime",
    "projectType": "library",
    "targets": {
      "test": {
        "dependsOn": [
          "build"
        ],
        "executor": "nx:run-commands",
        "options": {
          "command": "bun test --coverage",
          "cwd": "packages/runtime"
        }
      },
      "serve": {
        "executor": "nx:run-commands",
        "options": {
          "command": "vite --config ./test/vite.config.ts",
          "cwd": "packages/runtime"
        }
      },
      "build": {
        "dependsOn": [
          "^build"
        ],
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "tsdown",
            "tsc --noEmit"
          ],
          "cwd": "packages/runtime"
        }
      },
      "watch": {
        "dependsOn": [
          "^build"
        ],
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "tsdown --watch"
          ],
          "cwd": "packages/runtime"
        }
      },
      "lint": {
        "executor": "nx:run-commands",
        "options": {
          "command": "biome check .",
          "cwd": "packages/runtime"
        }
      },
      "typecheck": {
        "dependsOn": [
          "^build"
        ]
      }
    }
  }
}
