{
  "name": "@pencel/runtime",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/runtime",
  "projectType": "library",
  "targets": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsdown",
          "tsc --noEmit"
        ],
        "cwd": "packages/runtime"
      }
    },
    "watch": {
      "dependsOn": [
        "^build"
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsdown --watch"
        ],
        "cwd": "packages/runtime"
      }
    }
  }
}
