{
  "name": "@pencel/utils",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "map": "./dist/index.js.map"
    }
  },
  "devDependencies": {
    "typescript": "*"
  },
  "nx": {
    "sourceRoot": "packages/utils",
    "projectType": "library",
    "targets": {
      "build": {
        "dependsOn": ["^build"],
        "executor": "nx:run-commands",
        "outputs": ["{projectRoot}/dist"],
        "options": {
          "commands": ["tsdown", "tsc --noEmit"],
          "cwd": "packages/utils"
        }
      },
      "lint": {
        "executor": "nx:run-commands",
        "options": {
          "command": "biome check .",
          "cwd": "packages/utils"
        }
      },
      "typecheck": {
        "dependsOn": [
          "^build"
        ],
        "executor": "nx:run-commands",
        "options": {
          "command": "tsc --noEmit",
          "cwd": "packages/utils"
        }
      }
    }
  },
  "dependencies": {
    "tsdown": "^0.15.2"
  }
}
